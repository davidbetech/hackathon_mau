<h2>Mercado: <%= @mercado.nombre %></h2>
<h1>Crear Nuevo Producto</h1>

<%= form_with(model: [@mercado, @producto], local: true) do |form| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> impidieron guardar el producto:</h2>
      <ul>
        <% @producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.number_field :precio, step: 1.00 %>
  </div>



  <div class="actions">
    <%= form.submit 'Crear Producto' %>
  </div>
<% end %>